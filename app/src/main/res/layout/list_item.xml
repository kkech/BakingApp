<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recipe_image_view"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="@dimen/image_view_height_value"
        android:contentDescription="@string/content_description_image_recipe" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_view_height_value"
        android:background="@drawable/gradient_background"
        android:contentDescription="@string/content_description_image_background" />

    <TextView
        android:id="@+id/recipe_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_view_size_value"
        android:layout_alignBottom="@id/recipe_image_view"
        android:layout_marginLeft="@dimen/text_view_margin_value"
        android:layout_marginStart="@dimen/text_view_margin_value"
        android:layout_marginBottom="@dimen/text_view_margin_value" />

</RelativeLayout>